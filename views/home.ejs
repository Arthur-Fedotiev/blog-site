<%- include("partials/header"); -%>

<div class="container">
  <h1>Home</h1>
  <p><%= homeStartingContent %></p>

  <% posts.forEach(function(post){ %>
  <h1><%= post.title %></h1>

  <div class="row m-0">
    <div class="col postText">
      <p><%= post.content.substring(0, 100) + " ..." %></p>
    </div>
    <div class="col">
      <a href="/posts/<%= post._id %>">Read more...</a>
    </div>
  </div>
  <% }); %>
</div>

<%- include("partials/footer"); -%>
